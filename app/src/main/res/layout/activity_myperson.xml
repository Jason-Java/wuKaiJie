<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".my.activity.MyPersonActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/personBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottomcolor"
        app:navigationIcon="@drawable/back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text=" 比 赛 姓 名："/>

            <EditText
                android:id="@+id/personName"
                android:layout_width="200dp"
                android:hint="无"
                android:layout_height="wrap_content"
                android:maxLines="1"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="身份证号码："/>

            <EditText
                android:id="@+id/personCard"
                android:layout_width="200dp"
                android:hint="无"
                android:layout_height="wrap_content"
                android:maxLines="1"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="性            别："/>

            <EditText
                android:id="@+id/personSex"
                android:layout_width="200dp"
                android:hint="无"
                android:layout_height="wrap_content"
                android:maxLines="1"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="年            龄："/>

            <EditText
                android:id="@+id/personAge"
                android:layout_width="200dp"
                android:hint="无"
                android:layout_height="wrap_content"
                android:maxLines="1"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/personDeleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清空"/>

            <Button
                android:id="@+id/personUpdateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认修改"/>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>