<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/newsitem"
    android:layout_height="90dp">

    <ImageView
        android:layout_below="@id/newsitem_title"
        android:id="@+id/newsitem_iv"
        android:src="@mipmap/bottom_homepage_blue"
        android:padding="10dp"
        android:layout_width="120dp"
        android:layout_alignParentBottom="true"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"/>


    <TextView
        android:id="@+id/newsitem_title"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:maxLines="1"
        android:layout_alignParentLeft="true"
        android:text="吴凯杰"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/newsitem_content"
        android:textSize="10dp"
        android:layout_toRightOf="@+id/newsitem_iv"
        android:layout_below="@+id/newsitem_title"
        android:layout_marginTop="5dp"
        android:text="你在干嘛"
        android:layout_width="200dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/newsitem_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="3月4号"/>


</RelativeLayout>