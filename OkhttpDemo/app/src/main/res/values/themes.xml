<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OkhttpDemo" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!--去除ActionBar+全屏+状态栏小时-->
    <style name="Theme.OkhttpDemo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <!--login界面输入框-->
    <style name="login_et">
        <item name="android:layout_width">@dimen/login_width</item>
        <item name="android:layout_height">@dimen/login_height</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">8sp</item>
        <item name="android:drawablePadding">8.33dp</item>
        <item name="android:paddingLeft">9.67dp</item>
    </style>

    <!--login界面按钮-->
    <style name="login_bt">
        <item name="android:gravity">center</item>
        <item name="android:textSize">8sp</item>
        <item name="android:layout_width">@dimen/login_width</item>
        <item name="android:layout_height">@dimen/login_height</item>
        <!--默认为其设置了阴影和点击特效-->
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!--login界面TextView研发单位-->
    <style name="login_RandD">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark_black</item>
        <item name="android:textSize">@dimen/text_toosmall</item>
    </style>

    <!--login界面pupopWindow的Item-->
    <style name="login_popupWindow_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_login_popupwindow_textcolor</item>
        <item name="android:textSize">@dimen/text_middle</item>
        <item name="android:background">@drawable/selector_login_popupwindow_background</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!--main界面左边的按钮大小设置-->
    <style name="main_left_imageview">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">34dp</item>
    </style>


    <!--main界面左边的按钮文字设置-->
    <style name="main_left_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/main_text_small</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">38.67dp</item>
    </style>


    <!--rk界面左边的按钮大小设置-->
    <style name="rk_left_bt">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/selector_rk_bt_left</item>
        <item name="android:clickable">true</item>
    </style>


    <!--rk界面左边的按钮图片大小设置-->
    <style name="rk_left_imageview">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">34dp</item>
    </style>

    <!--rk界面左边的按钮文字设置-->
    <style name="rk_left_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/main_text_small</item>
    </style>


    <!--rk界面右边标题的文字设置-->
    <style name="rk_right_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#364064</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>