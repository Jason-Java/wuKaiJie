<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="horizontal"
    tools:context=".main.MainActivity">

    <RelativeLayout
        android:layout_width="86.68dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="78dp"
            android:layout_height="39.67dp"
            android:layout_marginTop="7.67dp"
            android:gravity="center"
            android:background="@drawable/shape_main_logo">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UNITE"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="34.33dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="26.33dp"
            android:layout_marginTop="73dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/main_left_imageview"
                    android:src="@mipmap/main_statistics"/>
                
                <TextView
                    style="@style/main_left_text"
                    android:text="统计"/>

            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="27.67dp"/>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/main_left_imageview"
                    android:src="@mipmap/main_personalcenter"/>

                <TextView
                    style="@style/main_left_text"
                    android:text="个人中心"/>

            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="27.67dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/main_left_imageview"
                    android:src="@mipmap/main_install"/>

                <TextView
                    style="@style/main_left_text"
                    android:text="设置"/>

            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="27.67dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/main_left_imageview"
                    android:src="@mipmap/main_exit"/>

                <TextView
                    style="@style/main_left_text"
                    android:text="退出"/>

            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="553.32dp"
        android:layout_height="match_parent"
        android:background="@drawable/shape_main_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19.99dp"
            android:layout_marginTop="17.33dp"
            android:text="危化品智能管控系统"
            android:textColor="#FF00061C"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="82.67dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="177.32dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="3.67dp"
                android:src="@mipmap/main_warning" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29.33dp"
                android:layout_marginTop="6dp"
                android:text="异常警告"
                android:textColor="#FF333333"
                android:textSize="10.67sp" />

            <View
                android:layout_width="8.44dp"
                android:layout_height="8.44dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_main_red" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="325.96dp"
            android:layout_marginTop="15.32dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="19.33dp"
                android:layout_height="19.33dp"
                android:background="@color/dark_blue" />

            <View
                android:layout_width="6.04dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/main_tv_user"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:text="Natalia Sanz"
                android:textColor="@color/black"
                android:textSize="9.33sp" />

            <View
                android:layout_width="23.67dp"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="仓库名称：标准试剂间"
                android:textColor="@color/black"
                android:textSize="9.33sp" />

            <View
                android:layout_width="6.01dp"
                android:layout_height="0dp" />

            <ImageButton
                android:layout_width="6.97dp"
                android:layout_height="4.2dp"
                android:background="@drawable/vector_main_triangle" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19.99dp"
            android:layout_marginTop="75dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_findAndReceive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/main_findandreceive" />

            <View
                android:layout_width="20dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/iv_openLock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/main_openlock" />

            <View
                android:layout_width="20dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/iv_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/main_return" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19.99dp"
            android:layout_marginTop="230dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_putInStorage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/main_putinstorage" />

            <View
                android:layout_width="20dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/iv_finalAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/main_finaladdress" />

            <View
                android:layout_width="20dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/iv_receiveGoods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/main_receivegoods" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>