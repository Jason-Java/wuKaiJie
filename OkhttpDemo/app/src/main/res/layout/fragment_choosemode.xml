<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rk.fragment.choosemode.ChooseModeFragment">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/rk_choose_et"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:background="@drawable/lay_rk_search_et"
                android:gravity="center_vertical"
                android:hint="请输入试剂名或者CAS"
                android:paddingLeft="2dp"
                android:maxLines="1"
                android:textSize="10sp" />

            <TextView
                android:clickable="true"
                android:id="@+id/rk_choose_bt_clear"
                android:layout_width="50dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:background="@drawable/lay_rk_search_clear"
                android:text="清空"/>

            <TextView
                android:clickable="true"
                android:gravity="center"
                android:id="@+id/rk_choose_bt_search"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_rk_search_bt"
                android:text="搜索"/>

        </LinearLayout>

        <TextView
            android:id="@+id/rk_choose_tv"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询结果( 0条 )"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="10sp"/>
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rk_choose_recyclerview"
            android:layout_width="530dp"
            android:layout_height="211.33dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="10dp"/>
        
        
    </RelativeLayout>

    
    
    

</FrameLayout>