<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cabinet_ll"
    android:layout_width="120dp"
    android:layout_height="67dp"
    android:orientation="horizontal"
    android:background="@drawable/shape_rk_choose_child"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="3dp"
    android:layout_marginBottom="3dp"
    android:clickable="true">

    <ImageView
        android:id="@+id/cabinet_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/cabinet_1"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="11.67dp"
        android:layout_marginRight="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="11.6dp"
            android:id="@+id/cabinet_mc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="柜子名称"
            android:textSize="10sp"
            android:textColor="@color/black"/>
        
        <LinearLayout
            android:layout_marginTop="11.6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cabinet_syrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余容量:"
                android:textColor="@color/black"
                android:textSize="6sp"/>

            <TextView
                android:id="@+id/cabinet_baifenbi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="6sp"
                android:gravity="right"
                android:text="(30/50)  "/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/cabinet_progress"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:max="100"
            android:padding="3dp"
            android:progressDrawable="@drawable/lay_rk_progressbar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progress="30"
            />

    </LinearLayout>



</LinearLayout>