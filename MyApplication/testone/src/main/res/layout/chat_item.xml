<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/chatitem"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/chatitem_iv"
        android:src="@mipmap/bottom_homepage_blue"
        android:padding="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"/>


    <TextView
        android:id="@+id/chatitem_name"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/chatitem_iv"
        android:text="吴凯杰"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/chatitem_chat"
        android:layout_marginTop="10dp"
        android:textSize="10dp"
        android:layout_alignLeft="@+id/chatitem_name"
        android:layout_below="@+id/chatitem_name"
        android:text="你在干嘛"
        android:layout_width="200dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/chatitem_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/chatitem_name"
        android:text="3月4号"/>

    <CheckBox
        android:id="@+id/chatitem_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:checked="false"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>