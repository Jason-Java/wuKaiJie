<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background2"
    android:paddingTop="16dp"
    android:columnCount="6"
    tools:context=".gridLayout.GridLayoutActivity">
    <!--columnCount设置每行最多几列-->
    <!--layout_row，layout_column设置在几行几列-->
    <!--layout_columnSpan设置横跨几列,layout_rowSpan设置横跨几行-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/chathistory1"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_columnSpan="4"
        android:layout_gravity="end"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/headsculpture1"
        android:layout_column="5"
        android:layout_row="0"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/chathistory2"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/headsculpture2"
        android:layout_column="0"
        android:layout_row="1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/chathistory1"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_columnSpan="4"
        android:layout_gravity="end"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/headsculpture1"
        android:layout_column="5"
        android:layout_row="2"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/chathistory2"
        android:layout_column="1"
        android:layout_row="3"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/headsculpture2"
        android:layout_column="0"
        android:layout_row="3"/>


</GridLayout>