<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme.通用主题 -->
    <style name="Theme.Demo01" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--定义一个小文字样式-->
    <style name="TextSmall">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <!--去除ActionBar-->
    <style name="Theme.Demo01.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--AppBarLayout样式-->
    <style name="Theme.Demo01.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--toolbar样式-->
    <style name="Theme.Demo01.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--登陆注册输入框样式-->
    <style name="EditText">
        <!--图标与内容的间距-->
        <item name="android:drawablePadding">@dimen/padding_middle</item>
        <!--左侧图标-->
        <item name="android:drawableLeft">@drawable/ic_phone</item>
        <item name="android:paddingTop">@dimen/padding_middle</item>
        <item name="android:paddingBottom">@dimen/padding_middle</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">@dimen/padding_middle</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_edit_text</item>
    </style>
</resources>