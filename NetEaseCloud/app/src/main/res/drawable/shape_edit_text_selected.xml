<?xml version="1.0" encoding="utf-8"?><!--layer-list也是一种drawable
类似ps的图层-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--一个item就是一层
    top:指定这一边到控件这一边的间距
    0dp:表示和原来一样
    正数:就是边框变小
    负数:边框显示到控件外面(达到隐藏效果)-->
    <item
        android:left="-1dp"
        android:right="-1dp"
        android:top="-1dp">

        <shape>
            <!--填充颜色为透明-->
            <solid android:color="@color/transparent" />
            <!--边框为灰色-->
            <stroke android:width="@dimen/divier_small"
                android:color="@color/colorPrimary"/>

        </shape>
    </item>

</layer-list>